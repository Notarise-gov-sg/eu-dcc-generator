{
  "include": ["src"],
  "compilerOptions": {
    "allowUnreachableCode": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2022"],
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es2022"
  },
  "exclude": ["node_modules"]
}